<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <TextView
        android:id="@+id/page_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"/>


    <EditText
        android:id="@+id/share_message_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/page_info"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="@string/default_message_share_edit_text"/>

    <Button
        android:id="@+id/share_jump_weibo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/share_message_edit_text"
        android:text="@string/share_jump_weibo_button"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <Button
        android:id="@+id/share_api_weibo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_message_edit_text"
        android:layout_toEndOf="@+id/share_jump_weibo_button"
        android:layout_toRightOf="@+id/share_jump_weibo_button"
        android:text="@string/share_api_weibo_button"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/token_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_jump_weibo_button"
        android:textSize="12sp" />

</RelativeLayout>
